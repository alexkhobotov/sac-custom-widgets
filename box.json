{
	"id": "com.alex.khobotov.box",
	"version": "1.1.0",
	"name": "Alex Khobotov Gantt",
	"description": "Alex's Gantt",
	"newInstancePrefix": "AlexBox",
	"icon": "https://alexkhobotov.github.io/sac-custom-widgets/icon.png",
	"vendor": "Alexander Khobotov",
	"eula": "",
	"license": "",
	"webcomponents": [
		{
			"kind": "main",
			"tag": "com-alex-khobotov-box",
			"url": "https://alexkhobotov.github.io/sac-custom-widgets/box.js",
			"integrity": "",
			"ignoreIntegrity": true
		},
		{
			"kind": "styling",
			"tag": "com-alex-khobotov-box-styling",
			"url": "https://alexkhobotov.github.io/sac-custom-widgets/box_styling.js",
			"integrity": "",
			"ignoreIntegrity": true
		}
	],
	"properties": {
		"color": {
			"type": "string",
			"description": "Background color",
			"default": "white"
		},
		"opacity": {
			"type": "number",
			"description": "Opacity",
			"default": 1
		},
		"width": {
			"type": "integer",
			"default": 100
		},
		"height": {
			"type": "integer",
			"default": 100
		}
	},
	"methods": {
		"setColor": {
			"description": "Sets the background color.",
			"parameters": [
				{
					"name": "newColor",
					"type": "string",
					"description": "The new background color"
				}
			],
			"body": "this.color = newColor;"
		},
		"getColor": {
			"returnType": "string",
			"description": "Returns the background color.",
			"body": "return this.color;"
		}
	},
	"events": {
		"onClick": {
			"description": "Called when the user clicks the Colored Box."
		}
	},
	"dataBindings": {
		"myDataBinding": {
		  "feeds": [
			{
			  "id": "dimensions",
			  "description": "Dimensions",
			  "type": "dimension"
			},
			{
			  "id": "measures",
			  "description": "Measures",
			  "type": "mainStructureMember"
			}
		  ]
		}
	}
}

 